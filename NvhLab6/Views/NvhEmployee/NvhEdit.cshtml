@model NvhLab6.Models.NvhEmployee
@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
}

<h2>Chỉnh sửa nhân viên</h2>

<form asp-action="NvhEditPUT" method="post">
    <input type="hidden" asp-for="NvhId" />

    <div class="form-group">
        <label>Họ tên</label>
        <input asp-for="NvhName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ngày sinh</label>
        <input asp-for="NvhBirthDay" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="NvhEmail" class="form-control" />
    </div>

    <div class="form-group">
        <label>Điện thoại</label>
        <input asp-for="NvhPhone" class="form-control" />
    </div>

    <div class="form-group">
        <label>Lương</label>
        <input asp-for="NvhSalary" class="form-control" />
    </div>

    <div class="form-group">
        <label>Trạng thái</label>
        <input asp-for="NvhStatus" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a class="btn btn-secondary" asp-action="NvhIndex">Quay lại</a>
</form>
