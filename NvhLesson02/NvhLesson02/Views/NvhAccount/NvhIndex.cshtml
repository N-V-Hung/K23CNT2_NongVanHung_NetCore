@{
    ViewData["Title"] = "NvhIndex";
    var NvhAccounts = ViewBag.NvhAccounts;
}
<div class="row">
    @foreach (var item in NvhAccounts)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="@item.Avatar" alt="" />
                <div class="caption">
                    <h3>@item.NvhName</h3>
                    <p>
                        @item.NvhBio
                    </p>
                    <p>
                        <a asp-controller="NvhAccount" asp-action="Profile" class="btn btn-success btn-block">Profile</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>

