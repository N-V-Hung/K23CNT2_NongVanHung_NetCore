@model NvhNetCoreMVCLab03.Models.NvhBook
@{
	ViewData["Title"] = "NvhCreate";
}
<h2>Them moi sach</h2>
<form action="" method="POST" entype="multipart/form-data">
	<div class="form-group">
		<label class="asp-for"> Ten sach</label>
		<input type="text" class="form-control" asp-for="Title" placeholder="Ten sach">
	</div>	
	<div class="form-group">
		<label asp-for="NvhAuthorId"> Tac gia</label>
		<select asp-for="NvhAuthorId" class="form-control" asp-items="@ViewBag.nvhAuthors">
			<optiop value="">Chon tac gia</optiop>
		</select>
	</div>
	<div class="form-group">
		<label asp-for="NvhGenreId"> The loai</label>
		<select asp-for="NvhGenreId" class="form-control" asp-items="@ViewBag.nvhAuthors">
			<optiop value="">Chon the loai</optiop>
		</select>
	</div>
	<div class="form-group">
		<label asp-for="NvhPrice"> Gia sach</label>
		<input type="text" class="form-control" asp-for="NvhPrice" placeholder="Gia sach">
	</div>
	<div class="form-group">
		<label asp-for="NvhTotalPage">Tong so trang</label>
		<input type="text" class="form-control" asp-for="NvhTotalPage" placeholder="Tong so trang">
	</div>
	<div class="form-group">
		<label asp-for="NvhImage">Hinh anh </label>
		<input type="file" class="form-control" asp-for="NvhImage" >
	</div>
	<div class="form-group">
		<label asp-for="NvhSumary">Gioi thieu ngan</label>
		<textarea class="form-control" asp-for="NvhSumary" placeholder="Noi dung gioi thieu sach..."></textarea>
	</div>
	<buton typeof="submit" class="btn btn-primary">Luu lai</buton>
</form>