@model IEnumerable<NvhLesson04.Models.Books>
@{	
	ViewData["Title"] = "NvhIndex";
}
<h1>DAnh sach cac cuon sach</h1>
<form action="" method="POST" class="form-inline" role="form">
	<div class="form-group">
		<select name="AuthorId" class="form-control" asp-items="ViewBag.authors">
			<option value="">chon tac gia</option>
		</select>
		<select name="GenreId" class="form-control" asp-items="ViewBag.genres">
			<option value="">Chon tac pham</option>
		</select>
	</div>
	<button type="submit" class="btn btn-primary">Tim kiem</button>
	<a asp-action="Create" class="btn btn-danger">Them moi</a>
	

</form>
<hr />
<table class="table table-bordered">
	<thead>
		<tr>
			<th>Id</th>
			<th>Tieu de </th>
			<th>tac gia</th>
			<th>the loai</th>
			<th>gia</th>
			<th>Hinh anh</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var book in Models )
		{
			<tr>
				<td>@book.Id</td>
				<td>@book.Title</td>
				<td>@book.AuthorId</td>
				<td>@book.GenreId</td>
				<td>@book.Price</td>
				<td>
					<img src="@book.Image" alt="@book.Title" width="40"/>

				</td>
				<td>
					<a asp-action="Edit" class="btn tbn-sm btn-primary">Sua</a>
				</td>
			</tr>
		}
	</tbody>
</table>